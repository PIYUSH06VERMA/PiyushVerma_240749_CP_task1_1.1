#include <bits/stdc++.h>
using namespace std;

int main() {
    int T;
    cin>>T;
    for(int i=1;i<=T;i++)
    {
        int N,M;
        cin>>N>>M;
        if(N<=M)
        {
            cout<<"-1";
        }
        else
        {
            cout<<2*M+1;
        }
        cout<<endl;
    }
	// your code goes here

}
